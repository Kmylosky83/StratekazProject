# StrateKaz - Variables de Entorno
# Copiar este archivo como .env y completar los valores

# Entorno de ejecución
DJANGO_ENV=development  # development, staging, production

# Configuración básica
SECRET_KEY=your-secret-key-here-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Base de datos
DB_ENGINE=django.db.backends.sqlite3  # Para desarrollo
# DB_ENGINE=django.db.backends.postgresql  # Para producción
DB_NAME=stratekaz_db
DB_USER=stratekaz_user
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_PORT=5432

# Configuración de Redis (para caché y sesiones)
REDIS_URL=redis://localhost:6379/0

# Configuración de correo
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password

# Configuración de AWS S3 (para archivos estáticos y media)
USE_S3=False
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=stratekaz-bucket
AWS_S3_REGION_NAME=us-east-1

# Configuración de Sentry (para monitoreo de errores)
SENTRY_DSN=your-sentry-dsn

# Configuración de Multi-tenant
TENANT_MODEL=tenants.Tenant
TENANT_DOMAIN_MODEL=tenants.Domain
PUBLIC_SCHEMA_NAME=public

# API Keys
OPENAI_API_KEY=your-openai-api-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key

# Configuración de CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://app.stratekaz.com

# Configuración de JWT
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_DELTA=86400

# Entorno
ENVIRONMENT=development